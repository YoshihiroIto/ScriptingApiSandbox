<Window x:Class="ScriptingApiSandbox.MainWindow.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mainWindow="clr-namespace:ScriptingApiSandbox.MainWindow"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:DataType="mainWindow:MainWindowViewModel"
        Title="ScriptingApiSandbox"
        Width="1200"
        Height="600"
        d:DesignHeight="1000"
        d:DesignWidth="800"
        Icon="/Assets/avalonia-logo.ico"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Design.DataContext>
        <mainWindow:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal">
            <Button Command="{Binding ExecuteScriptCommand}"
                    Content="Execute" />

            <Button Margin="12,0,0,0"
                    Command="{Binding AddCommand}"
                    Content="Add" />

            <Button Margin="1,0,0,0"
                    Command="{Binding GreetCommand}"
                    Content="Greet" />

            <Button Margin="1,0,0,0"
                    Command="{Binding ShowModalCommand}"
                    Content="ShowModal" />
        </StackPanel>

        <Grid ColumnDefinitions="*,*">
            <TextBox Grid.Column="0"
                     AcceptsReturn="True"
                     Text="{Binding Script}" />

            <Grid RowDefinitions="*,*"
                  Grid.Column="1">
                <ListBox Grid.Row="0"
                         ItemsSource="{Binding Stdout}">
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ListBox.Styles>
                </ListBox>

                <TextBlock Grid.Row="1"
                           Text="{Binding AllFunctions}" />
            </Grid>
        </Grid>
    </DockPanel>
</Window>