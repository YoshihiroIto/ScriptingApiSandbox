<Window x:Class="ScriptingApiSandbox.MainWindow.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mainWindow="clr-namespace:ScriptingApiSandbox.MainWindow"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:DataType="mainWindow:MainWindowViewModel"
        Title="ScriptingApiSandbox"
        Width="1200"
        Height="800"
        d:DesignHeight="1000"
        d:DesignWidth="800"
        Icon="/Assets/avalonia-logo.ico"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Design.DataContext>
        <mainWindow:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal">
            <Button Margin="0,0,1,0"
                    Command="{Binding ShowModalCommand}"
                    Content="Show Modal" />

            <Button Margin="0,0,1,0"
                    Command="{Binding ShowModelessCommand}"
                    Content="Show Modeless" />
        </StackPanel>

        <Grid ColumnDefinitions="3*,2*">
            <avaloniaEdit:TextEditor x:Name="TextEditor"
                                     Grid.Column="0"
                                     BorderBrush="LightGray"
                                     BorderThickness="0,1,1,0"
                                     ShowLineNumbers="True"
                                     FontSize="12"
                                     FontFamily="Cascadia Code, Consolas, Menlo, Monospace"
                                     SyntaxHighlighting="Python"
                                     TextChanged="TextEditor_OnTextChanged" />

            <ListBox Grid.Column="1"
                     BorderBrush="LightGray"
                     BorderThickness="0,1,0,0"
                     ItemsSource="{Binding Stdout}">
                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="Padding" Value="0" />
                    </Style>
                </ListBox.Styles>
            </ListBox>
        </Grid>
    </DockPanel>
</Window>